                <div class= "content">
                    <p>
                        <span class="city"> <%=weather.city %> </span> <br>
                        <span class="temperature"> <%=weather.temperature %> Â°C</span> <br>                        
                        <%= weather.description %>
                        <img src="http://openweathermap.org/img/w/<%=weather.icon%>.png" alt="Image" height="70" width="70"> <br>
                        <span class="wind">windspeed <%=weather.windspeed%> mps</span>
                    </p>
                </div>
            </div>
        </section>
